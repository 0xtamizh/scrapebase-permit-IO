{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "scrapebase",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "prebuild": "rm -rf dist && mkdir -p dist/public",
    "build": "tsc && npm run copy-static",
    "copy-static": "cp -f index.html dist/ && cp -rf public/. dist/public/ || echo 'No public files to copy'",
    "start": "NODE_ENV=production node dist/index.js",
    "watch": "tsc -w",
    "test": "playwright test",
    "test:ci": "playwright test --config=playwright.config.ts",
    "postinstall": "npm run build || exit 1",
    "audit:fix": "npm audit fix"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/generic-pool": "^3.1.12",
    "@types/node": "^20.17.25",
    "@types/turndown": "^5.0.4",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "@supabase/supabase-js": "^2.48.1",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jsdom": "^21.1.7",
    "@types/validator": "^13.12.3",
    "axios": "^1.9.0",
    "cheerio": "^1.0.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "generic-pool": "^3.9.0",
    "helmet": "^8.1.0",
    "jsdom": "^26.0.0",
    "openai": "^4.97.0",
    "p-limit": "3.1.0",
    "permit": "^0.2.4",
    "permitio": "^2.7.4",
    "playwright": "^1.42.1",
    "react": "^19.1.0",
    "reflect-metadata": "^0.2.1",
    "turndown": "^7.2.0",
    "validator": "^13.15.0",
    "winston": "^3.17.0"
  }
}
